% RAM: 800E12D0 (render_player_model)
% Skips drawing the player if disguised.
@Hook 7A780 {
	JAL $is_disguised
	NOP
	BNE V0, R0, .in_disguise
	NOP
		JAL   ~Func:queue_render_task
		DADDU	A0, S1, R0
	.in_disguise
	J   800E12D8
	NOP
}

