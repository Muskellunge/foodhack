			If *GourmetHealth < 1
				Call ShowMessageAtScreenPos ( 002F020B 160` 40` )
				Call GotoMap ( "gv_01" 0 )
			EndIf
			Wait 30`
		Else
			Call ShowMessageAtScreenPos ( 002F0208 160` 40` )
			Set *GourmetDefending 0
		EndIf
		Goto A
	EndIf
	% if you made it here, you win!
	Call SetMusicTrack ( 0 .Song:BattleEnd 0 F )
	Call ShowMessageAtScreenPos ( 002F020C 160` 40` )
	Call SetNpcPos ( 0 -200` -200` 200 )
	Set *DefeatedGuard 1
	Call SetMusicTrack ( 0 .Song:PeachSneaking 0 F )
	Return
	End
}

